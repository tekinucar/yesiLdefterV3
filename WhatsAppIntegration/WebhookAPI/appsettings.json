{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=UstadWhatsApp;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=true;"
  },
  "Jwt": {
    "Issuer": "UstadWhatsAppApi",
    "Audience": "UstadWhatsAppClients",
    "Key": "REPLACE_WITH_SECURE_256BIT_KEY_FOR_PRODUCTION_USE_MINIMUM_32_CHARACTERS",
    "ExpiresMinutes": "480"
  },
  "WhatsApp": {
    "ApiBase": "https://graph.facebook.com",
    "ApiVersion": "v20.0",
    "PhoneNumberId": "YOUR_WHATSAPP_PHONE_NUMBER_ID",
    "AccessToken": "YOUR_WHATSAPP_ACCESS_TOKEN",
    "VerifyToken": "YOUR_WEBHOOK_VERIFY_TOKEN"
  },
  "Email": {
    "SmtpHost": "smtp.office365.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-email@domain.com",
    "SmtpPassword": "your-app-password",
    "FromEmail": "your-email@domain.com",
    "FromName": "Ustad WhatsApp Support"
  },
  "Sms": {
    "NetGsm": {
      "Username": "YOUR_NETGSM_USERNAME",
      "Password": "YOUR_NETGSM_PASSWORD",
      "Header": "YOUR_SMS_HEADER",
      "ApiUrl": "https://api.netgsm.com.tr/sms/send/get/"
    }
  },
  "Security": {
    "MaxFailedLoginAttempts": 5,
    "LockoutMinutes": 15,
    "PasswordResetTokenExpiryHours": 1,
    "JwtRefreshIntervalMinutes": 60
  },
  "Features": {
    "EnablePasswordReset": true,
    "EnableSmsNotifications": true,
    "EnableEmailNotifications": true,
    "EnableAuditLogging": true,
    "EnableAutoReconnect": true
  }
}
